alias g='git'

alias ls='ls -Gla'
alias path='echo -e ${PATH//:/\\n}'

alias backup='mackup backup && brew bundle dump --force --file=~/.dotfiles/Brewfile && fresh'
alias up='brew update && brew upgrade && mas upgrade && fresh up'

alias vi='nvim'
alias vim='nvim'

#git

alias gs='git status --short'
alias grim='git rebase -i --autosquash origin/master'
alias glrbm='gcm && gl && gco - && grbm'
alias gpr='hub pull-request -o'

# Delete merged branches
alias gdmb='git branch --merged master | grep -v "\* master" | xargs -n 1 git branch -d'

